@using Microsoft.AspNetCore.Http
@model Usuario
@{
    if(string.Compare(Context.Session.GetString("user"),"admin")==0){
        Layout = "_AdminLayout";
    }
}
<style>
.btn-lg{
    width: 200px;
}

</style>
<br><br>
<div class="row justify-content-md-center">
<div class="jumbotron col-6">
    <form asp-action="Cadastro" method="POST">
        <center><h1>Registro</h1></center>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control" type="password" required/>
        </div>
        <br>
        <center><input type="submit" value="Salvar" class="btn btn-primary btn-lg"  /></center>
    </form>

</div>
</div>